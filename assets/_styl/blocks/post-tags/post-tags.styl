.post__tags
    background #f4f4f4
    width 110px
    border-top-right-radius primaryBorderRadius
    border-bottom-right-radius primaryBorderRadius
    padding-right 18px
    min-height 185px
    display flex
    align-items flex-end
    flex-direction column
    justify-content center

.post__tags-title
    color primaryHeading
    font-family headingFont
    rem(16px)
    margin-bottom 4px

.post__tags-list
    display flex
    flex-direction column
    align-items flex-end
    list-style none

.post__tag-item
    line-height 15px

.post__tag-link
    color primaryHeading
    font-family bodyFont
    white-space nowrap
    rem(12px)
