.single-post
    background white
    float left
    border-radius primaryBorderRadius
    box-shadow primaryBoxShadow
    height 100%
    position relative
    padding 75px 100px
    width 100%
    margin-bottom 30px

    @media screen and (max-width: 767px)
        padding 25px 20px
        margin-left -20px
        margin-right -20px
        width auto
        border-radius 0

.single-post__content
    margin-bottom 75px
    color textColor

    p
        margin-bottom 20px
        line-height 35px

    a
        color primaryHeading
        font-weight bold

    &.single-post__content--project
        margin-bottom 0

.single-post__demo
    border-radius primaryBorderRadius
    background-image linear-gradient( 90deg, rgb(26,188,156) 0%, rgb(36,220,184) 100%)
    width 200px
    color white
    text-align center
    padding 10px 20px
    display block
    margin 0 auto 40px


.single-post__title,
.single-page__header
    font-family headingFont
    rem(36px)
    color primaryHeading

.single-post__meta
    margin-bottom 35px

.single-post__reading-time
    margin-right 25px

    @media screen and (max-width: 540px)
        display block
        margin-top 10px

.single-post__time,
.single-post__reading-time,
.single-post__comments
    color textColor

.single-post__time
    font-family fjallaFont
    rem(16px)
    margin-right 45px
    display inline-block
    vertical-align middle

.single-post__reading-time,
.single-post__comments
    rem(12px)
    font-family bodyFont

.share-bts
    float: left
    position: absolute
    top: 85px
    left: 33px

    @media screen and (max-width: 767px)
        display none

.share-bts__icon
    background white
    display flex
    align-items center
    justify-content center
    box-shadow primaryBoxShadow
    margin-bottom 9px
    width 38px
    height 38px
    opacity 0.5
    transition opacity 0.3s
    border-radius 50%

    &:hover
        opacity 1

.share-bts__mobile
    display none

    .share-bts__icon
        margin-right 30px
        display: flex
        align-items: center
        justify-content: center
        opacity 1
        box-shadow none

    .share-bts__icon--fb img
        width 22px

    .share-bts__icon--tw img
        width 100%

    @media screen and (max-width: 767px)
        display: flex
        align-items: center
        justify-content: center

.share-bts__icon--tw
    img
        width 22px

.share-bts__icon--fb
    img
        width 12px
