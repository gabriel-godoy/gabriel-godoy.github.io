.post__details
    width 200px
    height 150px
    border-top-right-radius primaryBorderRadius
    border-bottom-right-radius primaryBorderRadius
    display flex
    flex-direction column
    @extend $main-gradient

.post__category
    font-family fjallaFont
    align-self center
    margin-top -30px
    line-height 85px
    color categoryColor
    rem(60px)

.post__date
    color hightlightColor
    font-family fjallaFont
    align-self center
    margin-bottom 8px
    rem(16px)

.post__reading-time
    margin-bottom 4px

.post__reading-time,
.post__comments
    font-family openFont
    color hightlightColor
    padding-left 20px
    rem(12px)

.post__time-icon,
.post__comments-icon
    margin-right 6px

.post__time-icon
    width 16px

.post__comments-icon
    width 16px
