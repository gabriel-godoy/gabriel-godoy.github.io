.project-list
    display flex
    justify-content space-between
    flex-flow row wrap
    margin 0

.project-list__link
    display block
    height 100%
    width 100%

.project-list__item
    flex-basis: 30%
    margin-bottom 50px
    background white
    border-radius primaryBorderRadius
    box-shadow primaryBoxShadow
    display inline-block
    vertical-align top
    overflow hidden

    @media screen and (max-width: 767px)
        flex-basis 47%

    @media screen and (max-width: 465px)
        flex-basis 97%

.project-list__title
    rem(32px)
    font-family fjallaFont
    color primaryHeading

    @media screen and (max-width: 767px)
        rem(26px)

.project-list__details
    padding 20px

.project-list__desc
    color textColor
