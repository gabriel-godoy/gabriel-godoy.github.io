baseFontSize =   16px
baseFontWeight = 400
smallFontSize =  baseFontSize * 0.875
baseLineHeight = 1.5

spacingUnit = 30px

// Breakpoints
containerMaxWidth = 1200px

// Colors | General
mainColor = #1c94c4
almostWhite = #f4f4f4
hightlightColor = #66cdf7
categoryColor = #38ffff

// Colors | Elements
primaryHeading = #1c7091
textColor = #333

primaryBorderRadius = 4px
primaryBoxShadow = 0px 2px 4px 0px rgba(0, 0, 0, 0.2)

// Type
fjallaFont = 'Fjalla One', sans-serif
openFont = 'Open Sans', sans-serif

headingFont = 'Fjalla One', sans-serif
bodyFont = 'Open Sans', sans-serif

// Gradient
$main-gradient
  background-image: linear-gradient(rgb(40,139,178) 0%, rgb(28,112,145) 100%)

// Use media queries like this:
// @include media-query(on-palm) {
//     .wrapper {
//         padding-right: spacingUnit / 2
//         padding-left: spacingUnit / 2
//     }
// }
media-query(device) {
    @media screen and (max-width: device) {
        @content
    }
}
