base-font-size =   16px
base-font-weight = 400
small-font-size =  base-font-size * 0.875
base-line-height = 1.5

spacing-unit = 30px

// Breakpoints
container-max-width = 1200px

// Colors | General
main-color = #1c94c4
almost-white = #f4f4f4
hightlight-color = #66cdf7
category-color = #38ffff

// Colors | Elements
primary-heading = #1c7091
text-color = #333

primary-border-radius = 4px
primary-box-shadow = 0px 2px 4px 0px rgba(0, 0, 0, 0.2)

// Type
heading-font = 'Fjalla One', sans-serif
body-font = 'Open Sans', sans-serif

// Gradient
$main-gradient
  background-image: linear-gradient( 90deg, rgb(28,112,145) 0%, rgb(40,139,178) 100%)

// Use media queries like this:
// @include media-query(on-palm) {
//     .wrapper {
//         padding-right: spacing-unit / 2
//         padding-left: spacing-unit / 2
//     }
// }
media-query(device) {
    @media screen and (max-width: device) {
        @content
    }
}
